<Window x:Class="GroupProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl Margin="0,0,370,217">
            <TabItem x:Name="SearchTab" Header="Search" MouseLeftButtonDown="SearchClick">
                <Grid Background="#FFE5E5E5">
                    <Button x:Name="GoToSearchWindow" Content="SearchWindow" HorizontalAlignment="Left" Margin="147,0,0,0" VerticalAlignment="Center" Height="58" Width="91" Click="GoToSearch"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="EditTab" Header="EditItems">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="23*"/>
                        <ColumnDefinition Width="401*"/>
                    </Grid.ColumnDefinitions>
                    <Label x:Name="numberLabelEdit" Content="Invoice Number" HorizontalAlignment="Left" Margin="13,100,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <Label x:Name="CostLabelEdit" Content="Total Cost:" HorizontalAlignment="Left" Margin="13,138,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <Button x:Name="EditInvoiceButton" Content="Edit Invoice" HorizontalAlignment="Left" Margin="135,22,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <Button x:Name="SaveInvoiceButton" Content="Save Invoice" HorizontalAlignment="Left" Margin="238,22,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <Label x:Name="DateLabelInvoice" Grid.Column="1" Content="Invoice Date" HorizontalAlignment="Left" Margin="13,69,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>
        <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Margin="359,236,23,25">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="70" DisplayMemberBinding="{Binding from}" />
                    <GridViewColumn Header="Invoice" Width="70" DisplayMemberBinding="{Binding from}" />
                    <GridViewColumn Header="Customer" Width="70" DisplayMemberBinding="{Binding from}" />
                    <GridViewColumn Header="Date Invoiced" Width="70" DisplayMemberBinding="{Binding from}" />
                    <GridViewColumn Header="Invoice Amount" Width="100" DisplayMemberBinding="{Binding from}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="ItemsLabel" Content="Items:" HorizontalAlignment="Left" Margin="435,27,0,0" VerticalAlignment="Top"/>
        <Label x:Name="CostLabel" Content="Cost:" HorizontalAlignment="Left" Margin="638,25,0,0" VerticalAlignment="Top"/>
        <Button x:Name="AddButton" Content="Add Item" HorizontalAlignment="Left" Margin="630,80,0,0" VerticalAlignment="Top"/>
        <Button x:Name="RemoveButton" Content="Remove Item" HorizontalAlignment="Left" Margin="703,80,0,0" VerticalAlignment="Top"/>
        <ComboBox HorizontalAlignment="Left" Margin="482,29,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Item #1"/>
        </ComboBox>
        <Button x:Name="ItemsWindowOpen" HorizontalAlignment="Left" Margin="77,311,0,0" VerticalAlignment="Top" Height="44" Width="89" Click="OpenItems" Content="ItemsWindow">
        </Button>
    </Grid>
</Window>